<h1> Home Page Of Codeial</h1>
<% if(locals.user){ %>
<section id="feed-posts">
    <h4> Your Posts</h4>
    <form action="/posts/create-post" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="What's on your mind?" required></textarea>
        <button type="submit">
            Post
        </button>
    </form>
    <div id="post-list">
       <ol type="1">
          <% for(let post of posts) {%>
           <li> 
               <p> <%=post.content%> </p>
               <p> Posted by <%=post.user.name%> </p>
               <% if((locals.user)&&(locals.user.id==post.user.id)){%>
               <small>
                   <a href="/posts/delete-post/?id=<%=post.id%>"> Delete</a>
               </small>
               <% } %>
               <div class="post-comments">
                   <% if(locals.user){ %>
               <form action="/comments/create" id="Comment-box" method="post">
                  <textarea name="content" id="" cols="50" rows="4" placeholder="Write a comment" required></textarea>
                  <input type='hidden' name='post' value="<%=post._id%>">
                  <button type="submit">Post Comment</button>
               </form>
                   <% } %>
                   <div class="post-comments-list">
                    <% for(comment of post.comments) {%>
                       <ul id="post-comments-<%=post._id%>">
                         <p>
                             <%= comment.content%>
                         </p>
                          <small><%=comment.user.name%></small>
                          <%if((locals.user)&&(locals.user.id==comment.user.id||locals.user.id==post.user.id)) {%>
                          <small>
                              <a href="/comments/delete/?cid=<%=comment.id%>&pid=<%=post.id%>">Delete</a>
                          </small>
                          <% } %>
                       </ul>
                       <% } %>
                   </div>
            </div>
           </li>
           <% }  %>
       </ol>
    </div>

</section>
<% } %>
