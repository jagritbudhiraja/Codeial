<h1> Home Page Of Codeial</h1>
<% if(locals.user){ %>
<section id="feed-posts">
    <h4> Your Posts</h4>
    <form action="/posts/create-post" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="What's on your mind?" required></textarea>
        <button type="submit">
            Post
        </button>
    </form>
    <% } %>
    <div id="post-list">
       <ol type="1">
          <% for(let post of locals.posts) {%>
            <%- include('_post') -%>
           <% }  %>
       </ol>
    </div>

</section>
